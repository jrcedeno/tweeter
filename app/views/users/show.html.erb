<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <%= render 'shared/profile' %><%= render 'shared/stats' %><%= render 'shared/tweet_form' if @user == current_user %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.tweets.any? %>
    <div class="timeline">
      <h2 class="title">
        Tweets
      </h2>
      <%= render 'shared/feed' %>
    </div>
    <% else %>
    <p>
      No post yet
    </p>
  </div>
  <% end %>
</div>