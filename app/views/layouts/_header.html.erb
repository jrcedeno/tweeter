<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "Twitter Clone", root_path, class: "navbar-brand" %>
      <button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse" type="button">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span></button>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right header-menu">
        <% if signed_in? %> 
          <li>
            <%= link_to users_path do %>
              <%= icon("users") %>
              <span>Users</span>
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user) do %>
              <%= icon("user") %>
              <span>Profile</span>
              <% end %>
          </li>
          <li>
            <%= link_to tweets_path do %>
              <%= icon("comment") %>
              <span>All tweets</span>
              <% end %>
          </li>
          <li>
            <%= link_to edit_user_path(current_user) do %>
              <%= icon("cog") %>
              <span>Setting</span>
              <% end %>
          </li>
          <li>
            <%= link_to signout_path, method: "delete" do %>
              <%= icon("sign-out") %>
              <span>Sign out</span>
              <% end %>
          </li>
          <% else %>
            <% unless params[:controller] == 'static_pages' %>
            <% end %>
          <li>
            <%= link_to "Users",  users_path %>
          </li>
          <li>
            <%= link_to "All tweets", tweets_path %>
          </li>
          <li>
            <%= link_to "Sign In", signin_path %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>  